<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EndActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/end_LBL_title"
        android:layout_width="match_parent"
        android:layout_marginTop="256dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:textColor="@color/primary_color"
        android:layout_marginHorizontal="32dp"
        android:text="Game Over"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/end_LBL_attempts"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:textColor="@color/primary_color"
        android:text="Attempts: 0"
        android:layout_below="@+id/end_LBL_title"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/end_LBL_score"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:textColor="@color/primary_color"
        android:text="Score: 0"
        android:layout_below="@+id/end_LBL_attempts"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/end_BTN_backToOpening"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/home"
        />

</RelativeLayout>